<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">

    <TextView
        android:id="@+id/lbl_RCliente_Pedidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:text="@string/string_Pedidos" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp" >

        <ListView
            android:id="@+id/Lista_RCliente_Pedidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >
        </ListView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/lbl_Pagos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
        	android:textSize="20dp"
            android:text="@string/string_Pagos" />

        <Button
            android:id="@+id/btn_RCliente_Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:minHeight="20dp"
            android:text="@string/string_Cancelar"
            android:textSize="10sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_RCliente_Borrar"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:minHeight="20dp"
            android:text="@string/string_Borrar"
            android:textSize="10sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_RCliente_Entregar"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:minHeight="20dp"
            android:text="@string/string_Entregar"
            android:textSize="10sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_RCliente_Cambiar"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Cambiar"
            android:textSize="10sp"
            android:visibility="invisible" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp" >

        <ListView
            android:id="@+id/Lista_RCLientes_Pagos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >
        </ListView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_Monto_Abonado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/string_Monto_Abonado"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/lbl_RCliente_Monto_Abonado_Total"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
        		android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lbl_RCliente_MontoPendienteTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/string_MontoPendiente"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/lbl_RCliente_Monto_Pendiente_Total"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
        		android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_vertical_margin" >

        <Button
            android:id="@+id/btn_RCliente_ElimPago"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/string_Borrar"
            android:textSize="10sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_RCliente_EditarPago"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/string_Editar"
            android:textSize="10sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_RCliente_CancelarPago"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/string_Cancelar"
            android:textSize="10sp"
            android:visibility="invisible" />

    </LinearLayout>

    </LinearLayout>
